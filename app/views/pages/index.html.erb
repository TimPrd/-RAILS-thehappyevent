<div class=" jumbotron text-center">
  <h1>The Happy Event</h1><br>
  <h2>Organisez vos événements privés ou publics et découvrez ce qui se prépare autour de vous !  </h2>
  <div class="container">

    <%= link_to 'allEvents' , class: "btn btn-block btn-primary" do %>
        <i class="glyphicon glyphicon-chevron-down"></i>
        <%="Voir la carte des événements"%>
    <% end %>
  </div>
</div>








<br>
<div class="col-lg-7 ">
  <div id="map"></div>
</div>

<%= form_tag(pages_path, :method => "get", id: "search-form", class: "col-lg-4 col-xs-12 row-centered") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Rechercher un lieu" %>
    <%= submit_tag "Rechercher" %>
<% end %>
<% if @events.nil? %>
    <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
<% end %>


<div class="list-group col-lg-5 col-centered" >
  <% @evenements.each do |event| %>
      <% if !event.isPrivate %>
          <%= link_to event , class: "list-group-item" do %>
              <span class="glyphicon glyphicon-map-marker"></span>
              <%=event.numero.to_s + " " + event.route + " - " + event.ville %>
          <%end%>
      <% end %>
  <% end %>

</div>
</div>

<script type="text/javascript">
  var map;
  function initMap()
  {
    var mapOptions = {
      center: {lat: 47, lng: 1.8},
      zoom: 6

    };

    map = new google.maps.Map(document.getElementById('map'), mapOptions);

    <% @evenements.each do |event| %>
      <%if !event.isPrivate %>
        addMarker(<%= event.latitude %>, <%= event.longitude %> );
      <% end %>
    <% end %>

    function addMarker(lat, lng) {
      var marker = new google.maps.Marker({
        position: new google.maps.LatLng(lat, lng),
        map: map,
        title: 'foo'
      });
    }

  }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBec10Y1_D_kZvAzf6QI60NHQsAJvSUNR0&callback=initMap">
</script>